+static void
+pusht_dropped (Btor2Parser *bfr, Btor2Line *l)
+{
+  if (bfr->ndropped >= bfr->szdropped)
+  {
+    bfr->szdropped = bfr->szdropped ? 2 * bfr->szdropped : 1;
+    bfr->dropped =
